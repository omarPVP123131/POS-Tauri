{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "POS Desktop",
  "version": "0.1.0",
  "identifier": "com.pos.desktop",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splash",
        "url": "splash.html",
        "title": "POS Desktop",
        "width": 400,
        "height": 550,
        "decorations": false,
        "resizable": false,
        "center": true,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      },
      {
        "label": "main",
        "url": "index.html",
        "title": "POS Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": null
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "publisher": "Tu Empresa",
    "copyright": "Copyright © 2025",
    "category": "Business",
    "shortDescription": "Sistema POS moderno y eficiente",
    "longDescription": "Sistema de punto de venta completo con gestión de inventario, ventas y reportes",
    
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "es-ES",
        "template": null
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "perMachine",
        "languages": ["Spanish"],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    },
    
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "frameworks": [],
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    
    "linux": {
      "deb": {
        "depends": [],
        "desktopTemplate": null,
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    },

    "resources": [],
    "externalBin": []
  }
}