{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "POS Desktop",
  "version": "0.1.0",
  "identifier": "com.pos.desktop",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splash",
        "url": "splash.html",
        "title": "POS Desktop",
        "width": 400,
        "height": 550,
        "decorations": false,
        "resizable": false,
        "center": true,
        "visible": true
      },
      {
        "label": "main",
        "url": "index.html",
        "title": "POS Desktop",
        "width": 1200,
        "height": 800,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"]
  }
}
